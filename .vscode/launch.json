{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug-Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }
            ],
            "logging": {
                "moduleLoad": false
            },
            "visualizerFile": "${workspaceFolder}/src/run_time/link_garbage_remover.natvis"
        },
        {
            "name": "Debug-Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }
            ],
            "logging": {
                "moduleLoad": false
            },
            "showDisplayString": true,
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                },
            ],
            "visualizerFile": [
                "${workspaceFolder}/src/util/link_garbage_remover.natvis",
                "${workspaceFolder}/src/run_time/attacha_abi_structs.natvis",
                "${workspaceFolder}/src/run_time/asm/FuncEnvironment.natvis",
                "${workspaceFolder}/src/library/list_array/list_array.natvis"
            ]
        },
    ]
}